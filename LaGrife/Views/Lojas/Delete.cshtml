@model LaGrife.Models.Entities.Loja

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center mb-4">Deletar Loja</h1>

<h3 class="text-center mb-4">Tem certeza que deseja deletar essa Loja?</h3>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card p-4 shadow-sm">
            <h4 class="text-center mb-3">Informações da Loja</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4 fw-bold">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Local)
                </dd>
            </dl>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <form asp-action="Delete" class="d-inline">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger btn-lg" />
    </form>
    <a asp-action="Index" class="btn btn-secondary btn-lg">Voltar para a lista</a>
</div>