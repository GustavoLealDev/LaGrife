@model IEnumerable<LaGrife.Models.Entities.Loja>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-4">LOJAS</h1>

<style>
    .btn-icon {
        background: none;
        border: none;
        padding: 0;
        margin: 0 5px;
    }

        .btn-icon.edit {
            color: #007bff;
        }

            .btn-icon.edit:hover {
                color: #0056b3;
            }

        .btn-icon.details {
            color: #ffc107;
        }

            .btn-icon.details:hover {
                color: #e0a800;
            }

        .btn-icon.delete {
            color: #dc3545;
        }

            .btn-icon.delete:hover {
                color: #c82333;
            }

    .td-actions {
        text-align: left;
    }
</style>

<p>
    <a asp-action="Create" class="btn btn-default">Cadastrar nova Loja</a>
</p>

<table class="table table-striped table-hover table-bordered rounded">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Local)
            </th>
 
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Local)
                </td>
                <td class="td-actions">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn-icon edit" title="Editar">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn-icon details" title="Detalhes">
                        <i class="fas fa-info-circle"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn-icon delete" title="Deletar">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>