@model LaGrife.Models.Entities.Loja

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center mb-4">Cadastrar Loja</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Local" class="form-label fw-bold"></label>
                <input asp-for="Local" class="form-control" placeholder="Digite o local da loja" />
                <span asp-validation-for="Local" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col text-end">
                    <input type="submit" value="Cadastrar" class="btn btn-success btn-lg" />
                </div>
                <div class="col text-start">
                    <a asp-action="Index" class="btn btn-secondary btn-lg">Voltar para a lista</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}