@model LaGrife.Models.Entities.Loja

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center mb-4">Editar Loja</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit" class="card p-4 shadow-sm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <label asp-for="Local" class="form-label fw-bold"></label>
                <input asp-for="Local" class="form-control" placeholder="Digite o local da loja" />
                <span asp-validation-for="Local" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Salvar" class="btn btn-primary btn-lg" />
                <a asp-action="Index" class="btn btn-secondary btn-lg">Voltar para a lista</a>
            </div>
        </form>
    </div>
</div>