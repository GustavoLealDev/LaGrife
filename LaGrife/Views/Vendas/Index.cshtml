@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center mb-4">VENDAS</h1>

<div class="row justify-content-center">
    <div class="col-md-6 mb-4">
        <form asp-action="Search" class="card p-4 shadow-sm">
            <h4 class="text-center mb-3">Busca Simples</h4>
            <div class="form-group mb-3 row">
                <label for="minDate" class="col-sm-4 col-form-label fw-bold">Data Inicial</label>
                <div class="col-sm-8">
                    <input type="date" name="minDate" class="form-control" />
                </div>
            </div>
            <div class="form-group mb-3 row">
                <label for="maxDate" class="col-sm-4 col-form-label fw-bold">Data Final</label>
                <div class="col-sm-8">
                    <input type="date" name="maxDate" class="form-control" />
                </div>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary btn-lg">Pesquisar</button>
            </div>
        </form>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="GroupSearch" class="card p-4 shadow-sm">
            <h4 class="text-center mb-3">Busca Agrupada</h4>
            <div class="form-group mb-3 row">
                <label for="minDate" class="col-sm-4 col-form-label fw-bold">Data Inicial</label>
                <div class="col-sm-8">
                    <input type="date" name="minDate" class="form-control" />
                </div>
            </div>
            <div class="form-group mb-3 row">
                <label for="maxDate" class="col-sm-4 col-form-label fw-bold">Data Final</label>
                <div class="col-sm-8">
                    <input type="date" name="maxDate" class="form-control" />
                </div>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary btn-lg">Pesquisar</button>
            </div>
        </form>
    </div>
</div>